<div class = "container">
  <div class = "row">
    <div class = "col-md-4 col-md-offset-4">
      <div class = "text-center">
        <h2>Sign up</h2>
      </div>  
      
        <% if params[:plan] == '2' %>
          <div class = "text-center">
            <h1>Pro Account</h1>
            <p>Sign up for the Pro Account for $10/month and get access to the community and contact information</p>
          </div>
          <div class = "well">
            <%= render "pro_form" %>
          </div>
          <% else %>
          <div class = "text-center">
            <h1>Basic Account</h1>
            <p>Sign up for the Basic Account for free and get access to the community</p>
          </div>
            <div class = "well">
              <%= render "basic_form" %>
            </div>
          <% end %>
        
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>